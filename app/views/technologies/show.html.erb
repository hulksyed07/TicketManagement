<p id="notice"><%= notice %></p>

<table border="1" align="center">
  <thead>
    <tr>
      <th>Technology</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
	<td><%= @technology.name %></td>
	<td><%= link_to 'Edit', edit_technology_path(@technology) %> |</td>
	<td><%= link_to 'Back', technologies_path %></td>
  </tbody>
</table>


<h1>Listing Tickets</h1>

<table border="1" align='center'>
  <thead>
    <tr>
      <th>Incident</th>
      <th>Last update sent on</th>
      <th>Engineer</th>
      <th>Application</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% @technology.applications.each do |application|%>
     <% application.tickets.each do |ticket| %>
       <tr>
         <td><%= ticket.incident %> </td>
         <td><%= ticket.dou %> </td>
         <td><%= get_engineer_name(ticket.engineer_id)%></td>
         <td><%= get_application_name(ticket.application_id)%></td>
         <td><%= get_status_name(ticket.status_id)%></td>
         <td><%= link_to 'Show', ticket %></td>
         <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
         <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
     <% end %>
   <% end %>
  </tbody>
</table>

