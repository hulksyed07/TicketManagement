<%= render 'welcome/menu'%>

<p id="notice"><%= notice %></p>

<p>
  Download:

  <%= link_to "Excel", statuses_path(format: "xls") %>
</p>

<h1>Listing Statuses</h1>

<table border="1" align="center">
  <thead>
    <tr>
      <th>Status</th>
      <th>Tickets</th>
      <th>Technologies</th>
      <th>Applications</th>
      <th>Engineers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.name %></td>
        <td><%= get_status_tickets_count(status) %></td>
        <td><%= get_status_technologies_count(status) %></td>
        <td><%= get_status_applications_count(status) %></td>
        <td><%= get_status_engineers_count(status) %></td>
        <td><%= link_to 'Show', status %></td>
        <td><%= link_to 'Edit', edit_status_path(status) %></td>
        <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Status', new_status_path %>
